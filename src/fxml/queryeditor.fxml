<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="QueryEditorController" >
    <top>
        <Label style="-fx-font-size: 20px; -fx-padding: 10px;" text="Edit Query" />
    </top>
    <center>
        <VBox fx:id="queryContainer" prefHeight="600.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10px;">
            <Button onAction="#saveQueryEdit" text="Save" />
            <Button onAction="#copyQuery" text="Copy Query" />
            <Button onAction="#closeEditor" text="Close" />
        </HBox>
    </bottom>
</BorderPane>
